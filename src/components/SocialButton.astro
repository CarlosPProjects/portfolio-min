---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  icon: string;
  url: string;
}

const { name, icon, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  class="flex w-auto items-center gap-3 px-4 py-3 border border-[#CED3D9] rounded-2xl hover:bg-black duration-300 group"
  ,
>
  <span class="bg-black p-2 rounded-xl">
    <Icon name={icon} size={18} color={"white"} />
  </span>
  <span class="font-semibold text-sm group-hover:text-white">
    {name}
  </span>
</a>
